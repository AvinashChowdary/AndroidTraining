package com.pcs.inboxdemo;

import com.pcs.adapters.ListAdapter;

import android.app.Activity;
import android.os.Bundle;
import android.view.View;
import android.view.View.OnClickListener;
import android.view.animation.Animation;
import android.view.animation.Animation.AnimationListener;
import android.view.animation.AnimationUtils;
import android.widget.ImageView;
import android.widget.ListView;
import android.widget.ViewFlipper;

public class InboxActivity extends Activity implements AnimationListener {

	private ImageView topImg;
	private ImageView listImg;
	private ListView listView;
	private ViewFlipper flipper;
	private Boolean flag, front;
	private Animation flipBack, flipFront;
	private String[] names = { "Avinash", "Sailika", "Dharma", "Anitha",
			"Kalyani" };
	private String[] data = { "Hi, How are you ?", "What are you doing ?",
			"Did u complete your task for today", "Tomorrow is a holiday",
			"Collect 60rs each for Bday party" };

	@Override
	protected void onCreate(Bundle savedInstanceState) {

		super.onCreate(savedInstanceState);
		setContentView(R.layout.main_layout);

		topImg = (ImageView) findViewById(R.id.not_flipped_img);
		listView = (ListView) findViewById(R.id.list_view);

		flipBack = AnimationUtils.loadAnimation(this, R.anim.flip_back);
		flipFront = AnimationUtils.loadAnimation(this, R.anim.flip_front);

		ListAdapter adapter = new ListAdapter(getApplicationContext(), names,
				data);
		listView.setAdapter(adapter);

		flipBack.setAnimationListener(this);
		flipFront.setAnimationListener(this);

		topImg.setOnClickListener(new OnClickListener() {

			@Override
			public void onClick(View v) {
				topImg.startAnimation(flipBack);
				flag = true;
				front = true;
			}
		});

	}

	@Override
	public void onAnimationStart(Animation animation) {

	}

	@Override
	public void onAnimationEnd(Animation animation) {

		if (flag) {
			topImg.startAnimation(flipFront);
			if (front) {
				topImg.setBackgroundDrawable(getResources().getDrawable(
						R.drawable.selected_img));
				front = false;
			}
			flag = false;
		}
	}

	@Override
	public void onAnimationRepeat(Animation animation) {

	}

}
